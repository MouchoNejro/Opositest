<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    app:cardCornerRadius="2dp"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/relative_espec"
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewOpos"
            android:layout_width="77dp"
            android:layout_height="84dp"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:src="@drawable/acab"></ImageView>

        <TextView
            android:id="@+id/tvOpos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:background="#00000000"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/imageViewOpos"
            android:fontFamily="@font/cagliostro"
            android:textColor="@color/black"
            android:text="Actividades fisico-deportivas"
            android:textSize="20dp" />
        />

    </RelativeLayout>

</androidx.cardview.widget.CardView>