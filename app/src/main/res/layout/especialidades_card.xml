<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"

    >


    <RelativeLayout
        android:id="@+id/relative_espec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/deporte"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/deporte">
        </ImageView>

        <TextView
            android:id="@+id/tituloespecial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividades fisico-deportivas"
            android:layout_toRightOf="@id/deporte"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/muli_semibold"/>

        <TextView
            android:id="@+id/descespecial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloespecial"
            android:layout_toRightOf="@id/deporte"
            android:fontFamily="@font/muli_semibold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>