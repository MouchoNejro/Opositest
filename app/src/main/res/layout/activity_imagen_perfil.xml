<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.ImagenPerfil">

    <ImageView
        android:id="@+id/ivacab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/acabpng" />

    <ImageView
        android:id="@+id/ivempleado"
        android:layout_width="124dp"
        android:layout_height="127dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivacab"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empleado" />

    <ImageView
        android:id="@+id/ivoperario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivempleado"
        app:srcCompat="@drawable/mecapng"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/ivexamen"
        android:layout_width="120dp"
        android:layout_height="124dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/ivenferm"
        app:layout_constraintTop_toBottomOf="@+id/ivempleado"
        app:srcCompat="@drawable/miniexamen" />

    <ImageView
        android:id="@+id/ivandro"
        android:layout_width="126dp"
        android:layout_height="121dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/ivexamen"
        app:layout_constraintTop_toBottomOf="@+id/ivoperario"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/ivenferm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ivacab"
        app:srcCompat="@drawable/nursepng3"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/btngaleria"
        android:layout_width="201dp"
        android:layout_height="53dp"
        android:layout_marginTop="80dp"
        android:text="GALERIA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivexamen"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>