<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.Testeando"
    tools:ignore="MissingLeanbackLauncher">

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait">
        <activity
            android:name=".activitys.RecyclerAutoescuela"
            android:exported="false" />
        <activity
            android:name=".activitys.InicioExamen"
            android:exported="true" />
        <activity
            android:name=".activitys.RecyclerOpos"
            android:exported="true" />
        <activity
            android:name=".activitys.Admin"
            android:exported="true" />
        <activity
            android:name=".activitys.Perfil"
            android:exported="true" />
        <activity
            android:name=".activitys.Contacto"
            android:exported="true" />
        <activity
            android:name=".activitys.GeneralTest"
            android:exported="true" />
        <activity
            android:name=".activitys.Login"
            android:exported="true" />
        <activity
            android:name=".activitys.Registro"
            android:exported="true" />
        <activity
            android:name=".activitys.SplashScreen"
            android:exported="true"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.Autonomos"
            android:exported="true" />
        <activity
            android:name=".activitys.OposicionesGeneral"
            android:exported="true" />
        <activity
            android:name=".activitys.ModeloExamen2"
            android:exported="true" />
        <activity
            android:name=".activitys.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activitys.TusExamenes"
            android:exported="true" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>